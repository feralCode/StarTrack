html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video 
    margin: 0
    padding: 0
    border: 0
    font-size: 100%
    font: inherit
    vertical-align: baseline
// HTML5 display-role reset for older browsers
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section 
    display: block
body 
    line-height: 1
ol, ul 
    list-style: none

blockquote, q 
    quotes: none

blockquote:before, blockquote:after,
q:before, q:after 
    content: ''
    content: none
table 
    border-collapse: collapse
    border-spacing: 0

html, body 
    position: relative
    top:0;
    left:0
    width: 100%
    height: 100%
    overflow: hidden
    background: transparent
    padding: 0
    margin: 0
    font-family: Roboto, "Helvetica Neue", sans-serif



app
  display: -webkit-flex;
  display: flex;


.message-bar
  background-color: #fff;
  height: 60px;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start
  align-items: flex-end
  line-height: 60px
  vertical-align: middle
  padding: 0
  margin: 0
  overflow: hidden
  box-sizing: border-box;
  .content
    background-color: transparent;
    width: calc(100% - 60px);
    height: 60px;
    font-size: 16px
    box-sizing: border-box
    border: none
    box-shadow: none
    outline: 0
    background: 0
    padding: 0 10px
    line-height: 60px
    vertical-align: middle
    color: #212121
    font-weight: 400
  .send-button, .attach-button
    width: 60px
    height: 60px
    i
      color: rgba(0,0,0,0.54)
      margin: 0
      padding: 0
      height: 60px
      width: 60px
      line-height: 60px
      text-align: center
      font-size: 32px
    

st-player
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  .album-art
    width: 100%;
    height: 100%;
    background-color: #212121;
    img
      height: 100%
      width: auto
      animation-duration: 20s
      animation-fill-mode: both
      animation-iteration-count: infinite
      animation-name: slideLeftRight
      animation-direction: alternate
      animation-timing-function: ease-in-out
      filter: saturate(1.8) blur(28px) brightness(0.6)
  .login-button
    width: 400px;
    height: 120px;
    background-color: #000;
    color: #fff;
    line-height: 120px;
    text-align: center;
    position: absolute;
  .search-box
    top: 50%;
    width: 400px;
    height: 120px;
    background-color: #000;
    color: #fff;
    line-height: 120px;
    text-align: center;
    position: absolute;


st-search-view
  .track-search-bar
    position: fixed
    top: 18px
    left: 2%
    border-radius: 2px
    background-color: #fff
    padding: 0 8px
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.2),0 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -1px rgba(0,0,0,.12)
    width: 96%
    height: auto
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    box-sizing: border-box
    z-index: 2
    transition: all .35s cubic-bezier(.35,0,.25,1)
    &.hidden
      top: -40%
      transition: all .35s cubic-bezier(.35,0,.25,1)
    i
      color: rgba(0,0,0,0.54)
      margin: 0
      padding: 0
      background-repeat: no-repeat no-repeat
      vertical-align: middle
      height: 52px
      width: 40px
      min-height: 52px
      min-width: 40px
      line-height: 52px
      text-align: center
    input
      font-size: 16px
      box-sizing: border-box
      border: none
      box-shadow: none
      outline: 0
      background: 0 0
      width: calc(100% - 80px)
      padding: 0 0 0 20px
      line-height: 52px
      height: 52px
      vertical-align: middle


.track-search-results-container
  background-color: #ECEFF1
  //background-color: rgba(236,239,241, 0.5)
  width 100%
  height 100%
  top 100%
  position absolute
  padding: 90px 2% 2% 2%
  transition: all .350s cubic-bezier(.35,0,.25,1)
  overflow-y: scroll
  z-index: 1
  box-sizing: border-box
  &.active
    top: 0
    transition: all .350s cubic-bezier(.35,0,.25,1)
  div#track-result-list
    background-color: #fff
    width: 100%
    height auto
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.2),0 1px 1px 0 rgba(0,0,0,.14),0 2px 1px -1px rgba(0,0,0,.12)
    div.list-item
      display: flex
      flex-direction: row
      justify-content: flex-start
      align-items: center
      height: 80px
      width: 100%
      line-height: 60px
      vertical-align: middle
      margin: 0
      padding: 0 12px
      overflow: hidden
      box-sizing: border-box;
      border-bottom: 1px solid #ECEFF1
      &:active
        background-color: rgba(0,0,0,0.50)
      img.track-cover
        height: 50px
        width: 50px;
      div.track-data
        height: 60px
        width: auto;
        padding: 0 0 0 20px
        box-sizing: border-box
        display: flex
        flex-direction: column
        justify-content: center
        align-items: flex-start
        div.artist
          height: 24px
          line-height: 24px
          font-weight: 500
          vertical-align: bottom
          font-size: 18px
          overflow: hidden
          text-overflow: ellipsis
        div.title
          height: 20px
          line-height: 20px
          vertical-align: top
          font-size: 14px
          font-weight: 400
          overflow: hidden
          text-overflow: ellipsis

message-view
  width 100%
  height 100%
  top 0
  left: 0
  position: absolute
  padding: 80px 0 70px 0
  overflow-y: hidden
  box-sizing: border-box
  div.chat-list
    position: relative
    width 100%
    height 100%
    display: flex
    flex-direction: column-reverse
    justify-content: flex-start
    align-items: flex-end
    z-index: 1
    overflow-y: auto
    padding: 0 2%
    box-sizing: border-box
    div.message-item
      height: auto
      width: auto;
      min-width: 180px
      padding: 11px 18px
      margin: 4px 0 0 0
      text-align: left
      box-sizing: border-box
      display: flex
      flex-direction: column
      justify-content: center
      align-items: flex-start
      font-size: 16px
      line-height: 18px
      color: #212121
      border-radius: 2px
      background-color: #fff
      animation-name: animGenie
      animation-duration: 250ms
      animation-timing-function: linear

@keyframes animGenie {
  0% { 
    opacity:0
    transform: translate3d(0,calc(200% + 30px),0) scale3d(0,1,1)
    animation-timing-function: ease-in
  }
  40% { 
    opacity:0.5
    transform: translate3d(0,0,0) scale3d(0.02,1.1,1)
    animation-timing-function: ease-out
  }
  70% { 
    opacity:0.6
    transform: translate3d(0,-40px,0) scale3d(0.8,1.1,1)
  }
  100% { 
    opacity:1
    transform: translate3d(0,0,0) scale3d(1,1,1)
  }
}